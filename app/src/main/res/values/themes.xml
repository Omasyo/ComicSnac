<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.ComicSnac" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowBackground">#00000000</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowSoftInputMode">adjustNothing</item>
    </style>

    <style name="Theme.ComicSnac.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenBackground">#FF1A323E</item>
        <item name="postSplashScreenTheme">@style/Theme.ComicSnac</item>
    </style>
</resources>